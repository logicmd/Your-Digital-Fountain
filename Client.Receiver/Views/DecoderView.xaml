<Window x:Class="Client.Receiver.Views.DecoderView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Decoder" Height="300" Width="420" ResizeMode="CanMinimize" WindowStartupLocation="CenterScreen">
    <Grid>
        <StackPanel>
            <Button Content="Start Receiving" Height="23" Margin="50"  Name="receivingButton" Width="100" Command="{Binding StartReceiving}"/>
            <Label Name="statusLabel" HorizontalAlignment="Center"  Content="{Binding Status}"/>
            <Label Name="messageLabel" HorizontalAlignment="Center" Content="{Binding DecodedMessage}"/>
        </StackPanel>
    </Grid>
</Window>
